<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="#FFF7F0" /> <!-- Background color when selected -->
            <stroke android:width="2dp" android:color="@android:color/holo_purple" /> <!-- Border color when selected -->
            <corners android:radius="14dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state (unselected) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle" android:padding="10dp">
            <solid android:color="#FFFFFF" /> <!-- Background color when unselected -->
            <stroke android:width="2dp" android:color="#808080" /> <!-- Border color when unselected -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>